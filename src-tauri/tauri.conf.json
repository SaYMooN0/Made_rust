{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "MADE",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": true, 
        "ask": true,
        "confirm": true,
        "message": true, 
        "open": true, 
        "save": true 
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "made",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "MADE",
        "width": 800,
        "height": 600,
        "minHeight": 600,
        "minWidth": 600
      }
    ]
  }
}
